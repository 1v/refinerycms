<%= render :partial => "/refinery/admin/search", :locals => {:url => main_app.refinery_admin_resources_path} %>
<h2>
  <% if searching? %>
    <%= t('results_for', :scope => 'refinery.admin.search', :query => params[:search]) %>
  <% else %>
    Files
  <% end %>
</h2>
<% if @resources.any? %>
  <div class='pagination_container'>
    <%= render :partial => 'resources' %>
  </div>
<% else %>
  <p>
    <% unless searching? %>
      <strong><%= t('.no_files_yet') %></strong>
    <% else %>
      <%= t('no_results', :scope => 'refinery.admin.search') %>
    <% end %>
  </p>
<% end %>
