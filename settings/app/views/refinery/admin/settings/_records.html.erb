<%= render :partial => "/refinery/admin/search",
           :locals => {
             :url => main_app.refinery_admin_settings_path
           } %>

<h2>
  <% if searching? %>
    <%= t('results_for', :scope => 'refinery.admin.search', :query => params[:search]) %>
  <% else %>
    Settings
  <% end %>
</h2>
<% if @settings.any? %>
  <div class='pagination_container'>
    <%= render :partial => 'settings' %>
  </div>
<% else %>
  <p>
    <% if searching? %>
      <%= t('no_results', :scope => 'refinery.admin.search') %>
    <% else %>
      <strong>
        <%= t('.empty_set') %>
        <%= t('.create_first', :link => t('new', :scope => 'refinery.admin.settings.actions')) %>
      </strong>
    <% end %>
  </p>
<% end %>